<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incident Name"
        android:id="@+id/incidentName"
        android:layout_marginTop="74dp"
        android:layout_toStartOf="@+id/incidentNameText"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/incidentNameText"
        android:layout_marginRight="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incidentNameText"
        android:hint="Incident Name"
        android:layout_marginRight="69dp"
        android:layout_alignBottom="@+id/incidentName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description"
        android:layout_below="@+id/incidentNameText"
        android:layout_alignRight="@+id/incidentName"
        android:layout_alignEnd="@+id/incidentName"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText"
        android:hint="Description"
        android:layout_alignBottom="@+id/description"
        android:layout_alignLeft="@+id/incidentNameText"
        android:layout_alignStart="@+id/incidentNameText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:id="@+id/priority"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/descriptionText"
        android:layout_alignRight="@+id/description"
        android:layout_alignEnd="@+id/description" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priorityText"
        android:hint="Priority Level"
        android:layout_alignBottom="@+id/priority"
        android:layout_toRightOf="@+id/incidentName"
        android:layout_toEndOf="@+id/incidentName" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/incidentImageBtn"
        android:layout_below="@+id/priority"
        android:layout_alignLeft="@+id/priority"
        android:layout_alignStart="@+id/priority"
        android:layout_marginTop="36dp"
        android:src="@drawable/systemreport32"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitBtn"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/incidentImageBtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>